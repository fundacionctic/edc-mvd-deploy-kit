# ============================================
# ISSUER SERVICE CONFIGURATION
# ============================================

# Issuer Public DNS/Hostname (for DID resolution)
# Development: host.docker.internal (standardized Docker hostname)
# Production: issuer.yourdomain.com
# Note: ISSUER_DID is generated dynamically from ISSUER_PUBLIC_HOST and ISSUER_DID_API_PORT
ISSUER_PUBLIC_HOST=host.docker.internal

# Issuer Service Ports
ISSUER_HTTP_PORT=10010           # Main API endpoint
ISSUER_STS_PORT=10011            # Secure Token Service
ISSUER_ISSUANCE_PORT=10012       # Credential issuance endpoint
ISSUER_ADMIN_PORT=10013          # Admin API (CRITICAL for seeding!)
ISSUER_VERSION_PORT=10014        # Version/capabilities endpoint
ISSUER_IDENTITY_PORT=10015       # Identity/credential service
ISSUER_DID_API_PORT=10016        # DID resolution endpoint (used for DID generation)
ISSUER_DEBUG_PORT=1043           # Remote debugging (Java)

# Issuer Database Configuration
# Separate database for issuer service
ISSUER_DB_NAME=issuer
ISSUER_DB_USER=issuer
ISSUER_DB_PASSWORD=issuer

# Issuer Vault Configuration
# Can use same Vault instance or separate one
ISSUER_VAULT_TOKEN=root

# Issuer Authentication
# Superuser key for admin endpoints (base64 encoded)
# Format: base64(username).base64(password)
# Default: super-user / super-secret-key
# CRITICAL: CHANGE FOR PRODUCTION!
ISSUER_SUPERUSER_KEY=c3VwZXItdXNlcg==.c3VwZXItc2VjcmV0LWtleQo=

# Identity API authentication key
ISSUER_IDENTITY_API_KEY=password

# Issuer Signing Key Configuration
ISSUER_SIGNING_KEY_ALIAS=statuslist-signing-key

# Note: Issuer key files are generated dynamically
# Run: python3 scripts/issuer/generate_keys.py
# Default paths: assets/keys/issuer_public.pem and assets/keys/issuer_private.pem

# ============================================
# PROVIDER PARTICIPANT CONFIGURATION
# ============================================

# Provider Public DNS/Hostname (for DID resolution)
# Development: host.docker.internal (standardized Docker hostname)
# Production: provider.yourdomain.com
PROVIDER_PUBLIC_HOST=host.docker.internal
PROVIDER_PARTICIPANT_NAME=provider

# Control Plane Ports
PROVIDER_CP_WEB_PORT=8080
PROVIDER_CP_MANAGEMENT_PORT=8081
PROVIDER_CP_PROTOCOL_PORT=8082
PROVIDER_CP_CONTROL_PORT=8083
PROVIDER_CP_CATALOG_PORT=8084
PROVIDER_CP_DEBUG_PORT=1044

# Data Plane Ports
PROVIDER_DP_WEB_PORT=8090
PROVIDER_DP_CONTROL_PORT=8093
PROVIDER_DP_PUBLIC_PORT=11002
PROVIDER_DP_DEBUG_PORT=1045

# Identity Hub Ports
PROVIDER_IH_WEB_PORT=7000
PROVIDER_IH_CREDENTIALS_PORT=7001
PROVIDER_IH_STS_PORT=7002
PROVIDER_IH_DID_PORT=7003          # DID resolution endpoint (used for DID generation)
PROVIDER_IH_IDENTITY_PORT=7005
PROVIDER_IH_DEBUG_PORT=1046

# Database Configuration
PROVIDER_DB_NAME=provider
PROVIDER_DB_USER=provider
PROVIDER_DB_PASSWORD=provider

# Control Plane Database
PROVIDER_CP_DB_USER=provider_cp
PROVIDER_CP_DB_PASSWORD=provider_cp

# Data Plane Database
PROVIDER_DP_DB_USER=provider_dp
PROVIDER_DP_DB_PASSWORD=provider_dp

# Identity Hub Database
PROVIDER_IH_DB_USER=provider_ih
PROVIDER_IH_DB_PASSWORD=provider_ih

# Vault Configuration
PROVIDER_VAULT_TOKEN=root

# Authentication Keys
PROVIDER_MANAGEMENT_API_KEY=password
PROVIDER_CATALOG_API_KEY=password
PROVIDER_IDENTITY_API_KEY=password

# Issuer Service Integration (for credential acquisition)
# These should match the Issuer service configuration above
# ISSUER_PUBLIC_HOST and ISSUER_ADMIN_PORT are used by provider scripts
# ISSUER_SUPERUSER_KEY is used for authentication with Issuer Admin API

# Note: Provider key files are generated dynamically
# Run: python3 scripts/provider/generate_keys.py
# Default paths: assets/keys/provider_public.pem and assets/keys/provider_private.pem

