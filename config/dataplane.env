# Dataplane Configuration
# Runtime Identity
EDC_HOSTNAME=dataplane
EDC_RUNTIME_ID=mvd-dataplane
EDC_PARTICIPANT_ID=did:web:identityhub%3A7083

# Token verification and signing
EDC_TRANSFER_PROXY_TOKEN_VERIFIER_PUBLICKEY_ALIAS=did:web:identityhub%3A7083#key-1
EDC_TRANSFER_PROXY_TOKEN_SIGNER_PRIVATEKEY_ALIAS=did:web:identityhub%3A7083#key-1

# Dataplane selector URL (points to controlplane)
EDC_DPF_SELECTOR_URL=http://controlplane:8083/api/control/v1/dataplanes

# Main HTTP settings
WEB_HTTP_PORT=11003
WEB_HTTP_PATH=/api

# Control API
WEB_HTTP_CONTROL_PORT=11002
WEB_HTTP_CONTROL_PATH=/api/control

# Public API (data access endpoint)
WEB_HTTP_PUBLIC_PORT=11001
WEB_HTTP_PUBLIC_PATH=/api/public

# STS Configuration
EDC_IAM_STS_OAUTH_TOKEN_URL=http://identityhub:7086/api/sts/token
EDC_IAM_STS_OAUTH_CLIENT_ID=did:web:identityhub%3A7083
EDC_IAM_STS_OAUTH_CLIENT_SECRET_ALIAS=did:web:identityhub%3A7083-sts-client-secret

# Vault Configuration
EDC_VAULT_HASHICORP_URL=http://vault:8200
EDC_VAULT_HASHICORP_TOKEN=root-token

# Database Configuration
EDC_DATASOURCE_DEFAULT_URL=jdbc:postgresql://postgres:5432/mvd
EDC_DATASOURCE_DEFAULT_USER=mvd_user
EDC_DATASOURCE_DEFAULT_PASSWORD=mvd_password
EDC_SQL_SCHEMA_AUTOCREATE=true

# Debug Configuration
JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:1044
